    "@graphql-modules/core": "^0.7.8",
    "@hapi/joi": "^15.1.1",
    "apollo-server-express": "^2.7.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "graphql": "^14.4.2",
    "jsonwebtoken": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.0.9",
